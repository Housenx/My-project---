#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <math.h>
int tri(int a){
    system("cls");

    for(int i = 0; i <= a; i++){
        for(int b = 0; b <= i;b++){
            printf("%d ", b);
        }
        printf("\n");
    }
    return 0;
}

int matriz(int a, int mat[a][a]){
    system("cls");

    int i, b;
    for(i = 0; i < a; i++){
        for(b = 0; b < a; b ++){
            printf("%d ", mat[i][b]);
        }
        printf("\n");
    }

    return 1;
}

int main(){

    int valor = 0;
    int x, x_, xx;

    while(valor != 3){

        printf("Digite qual operacao deseja fazer:\n");
        printf("1. triangulo\n2. matriz\n3. Encerrar\n");

        scanf("%d", &valor);

        switch(valor){
            case 1:
            printf("Digite o valor do triangulo: ");
            scanf("%d", &x);

            tri(x);
            break;
            case 2:
            printf("Tamanho da matriz: ");

            scanf("%d", &x);
            int m[x][x];
            system("cls");

            for(xx = 0; xx < x; xx++)
            {
                printf("Digite os valores da %d coluna:\n", xx+1);
                for(x_ = 0; x_ < x; x_ ++)
                {
                    scanf("%d", &m[xx][x_]);
                }
            }

            matriz(x, m);
            break;
        }

    }

    system("cls");

    printf("Programa encerrado!");

}
